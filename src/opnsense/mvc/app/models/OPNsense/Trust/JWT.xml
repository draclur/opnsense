<model>
    <mount>//OPNsense/Trust/JWT</mount>
    <version>1.0.0</version>
    <description>
        OPNsense JWT Helper
    </description>
    <items>
        <creator type="ArrayField"><!-- do not render -->
            <signature_type type="OptionField">
                <Required>Y</Required>
                <default>HS256</default>
                <OptionValues>
                    <HS256>HS256</HS256>
                    <HS384>HS384</HS384>
                    <HS512>HS512</HS512>
                    <RS256>RS256</RS256>
                    <RS384>RS384</RS384>
                    <RS512>RS512</RS512>
                </OptionValues>
            </signature_type>
            <rsa_key type="CertificateField">
                <Type>cert</Type>
            </rsa_key>
            <key type="TextField">
            </key>
            <!-- issuer -->
            <issuer type="TextField">
            </issuer>
            <!-- subject -> username -->
            <subject type="TextField">
            </subject>
            <!-- expires -->
            <expire type="TextField">
            </expire>
            <!-- expires -->
            <not_before type="TextField">
            </not_before>

            <issuer type="CSVListField">
                <multiple>Y</multiple>
            </issuer>

            <audience type="CSVListField">
                <multiple>Y</multiple>
            </audience>
        </creator>
    </items>
</model>
