<form>
    <field>
        <id>Internal.descr</id>
        <label>Descriptive Name</label>
        <type>text</type>
    </field>
    <field>
        <type>header</type>
        <label>Internal Certificate</label>
    </field>
    <field>
        <id>Internal.cauuid</id>
        <label>Certificate Authority</label>
        <type>dropdown</type>
    </field>
    <field>
        <id>Internal.cert_type</id>
        <label>Type</label>
        <type>dropdown</type>
        <help>Choose the type of certificate to generate here, the type defines it's constraints</help>
    </field>
    <field>
        <id>Internal.keylen</id>
        <label>Key Length (bits)</label>
        <type>dropdown</type>
    </field>
    <field>
        <id>Internal.digest_alg</id>
        <label>Digest Algorithm</label>
        <type>dropdown</type>
        <help>It is recommended to use an algorithm stronger than SHA1 when possible.</help>
    </field>
    <field>
        <id>Internal.lifetime</id>
        <label>Lifetime (days)</label>
        <type>text</type>
    </field>
    <field>
        <type>header</type>
        <label>Distinguished Name</label>
    </field>
    <field>
        <id>Internal.dn_country</id>
        <label>Country Code</label>
        <type>dropdown</type>
    </field>
    <field>
        <id>Internal.dn_state</id>
        <label>State or Province</label>
        <type>text</type>
        <help><![CDATA[<em>ex:</em> Sachsen]]></help>
    </field>
    <field>
        <id>Internal.dn_city</id>
        <label>City</label>
        <type>text</type>
        <help><![CDATA[<em>ex:</em> Leipzig]]></help>
    </field>
    <field>
        <id>Internal.dn_organization</id>
        <label>Organization</label>
        <type>text</type>
        <help><![CDATA[<em>ex:</em> My Company Inc]]></help>
    </field>
    <field>
        <id>Internal.dn_email</id>
        <label>Email Address</label>
        <type>text</type>
        <help><![CDATA[<em>ex:</em> admin@mycompany.com]]></help>
    </field>
    <field>
        <id>Internal.dn_commonname</id>
        <label>Common Name</label>
        <type>text</type>
        <help><![CDATA[<em>ex:</em> internal-ca]]></help>
    </field>
    <field>
        <type>header</type>
        <label>Alternative Names</label>
    </field>
    <field>
        <id>Internal.DNS</id>
        <label>DNS</label>
        <type>select_multiple</type>
        <style>tokenize</style>
        <allownew>true</allownew>
        <help><![CDATA[Use a comma or press Enter for new item.<br/>
        <div class="text-info"><b>TIP: </b>You can also paste a comma separated list into this field.</div>]]></help>
    </field>
    <field>
        <id>Internal.IP</id>
        <label>IP</label>
        <type>select_multiple</type>
        <style>tokenize</style>
        <allownew>true</allownew>
        <help><![CDATA[Use a comma or press Enter for new item.<br/>
        <div class="text-info"><b>TIP: </b>You can also paste a comma separated list into this field.</div>]]></help>
    </field>
    <field>
        <id>Internal.email</id>
        <label>Email</label>
        <type>select_multiple</type>
        <style>tokenize</style>
        <allownew>true</allownew>
        <help><![CDATA[Use a comma or press Enter for new item.<br/>
        <div class="text-info"><b>TIP: </b>You can also paste a comma separated list into this field.</div>]]></help>
    </field>
    <field>
        <id>Internal.URI</id>
        <label>URI</label>
        <type>select_multiple</type>
        <style>tokenize</style>
        <allownew>true</allownew>
        <help><![CDATA[Use a comma or press Enter for new item.<br/>
        <div class="text-info"><b>TIP: </b>You can also paste a comma separated list into this field.</div>]]></help>
    </field>
</form>