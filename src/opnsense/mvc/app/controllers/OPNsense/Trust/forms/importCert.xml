<form>
    <field>
        <id>Import.descr</id>
        <label>Descriptive name</label>
        <type>text</type>
    </field>
    <field>
        <type>header</type>
        <label>Import Certificate</label>
    </field>
    <field>
        <id>Import.cert</id>
        <label>Certificate data</label>
        <type>textbox</type>
        <height>7</height>
        <help>Paste a certificate in X.509 PEM format here.</help>
    </field>
    <field>
        <id>Import.key</id>
        <label>Private key data</label>
        <type>textbox</type>
        <height>7</height>
        <help>Paste a private key in X.509 PEM format here.</help>
    </field>
</form>